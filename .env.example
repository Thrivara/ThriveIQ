# Server
NODE_ENV=development
PORT=5000

# Database (Supabase Postgres connection string)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DB?sslmode=require
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres?sslmode=require

# Sessions
SESSION_SECRET=replace-with-a-strong-random-string

# OpenAI
OPENAI_API_KEY=

# Supabase (for supabase-js and MCP server)
SUPABASE_URL=https://YOUR_PROJECT.supabase.co
SUPABASE_ANON_KEY=YOUR_SUPABASE_ANON_KEY
# Optional if you host your own MCP server or need elevated access
# SUPABASE_SERVICE_ROLE_KEY=
